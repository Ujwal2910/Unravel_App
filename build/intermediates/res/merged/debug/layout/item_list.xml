<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/md_keylines"
    android:layout_marginLeft="@dimen/md_keylines"
    android:layout_marginRight="@dimen/md_keylines"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:id="@+id/list_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hello"
            android:layout_marginStart="@dimen/md_keylines"
            android:layout_marginTop="6dp"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/list_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="vaj cyuagu gd uygwdy wgl dwdgw qdu"
            android:textSize="14sp"
            android:layout_below="@id/list_title"
            android:layout_marginTop="4dp"
            android:layout_marginStart="@dimen/md_keylines"/>

        <TextView
            android:id="@+id/list_lang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Python"
            android:textSize="14sp"
            android:layout_below="@id/list_desc"
            android:layout_marginTop="4dp"
            android:layout_marginStart="@dimen/md_keylines" />

        <TextView
            android:id="@+id/list_stars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1231"
            android:textSize="14sp"
            android:layout_below="@id/list_lang"
            android:layout_marginTop="4dp"
            android:layout_marginStart="@dimen/md_keylines"/>

        <TextView
            android:id="@+id/list_forks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1242"
            android:textSize="14sp"
            android:layout_below="@id/list_stars"
            android:layout_marginTop="4dp"
            android:layout_marginStart="@dimen/md_keylines"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>